@model servico
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Novo Usuario
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form">
                            <div class="-group col-lg-8">
                                <label>Nome :</label>
                                <input class="form-control" id="txtNome">

                            </div>
                            <div class="form-group col-lg-4">
                                <label>status :</label>
                                <select class="form-control" id="cboStatus">
                                    <option value="true">ativo</option>
                                    <option value="false">inativo</option>
                                </select>

                            </div>
                            <div class="form-group col-lg-4">
                                <label>Cargo :</label>
                                <select class="form-control" id="cboCargo">
                                    <option value="1">Administrador</option>

                                </select>

                            </div>

                            <div class="form-group col-lg-8">

                                <br />
                                <button type="button" id="btnSalvar" class="btn btn-default pull-right">Salvar</button>

                            </div>

                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script type="text/javascript">
    $("#btnSalvar").click(function () {

        var data = {
            nome: $('#txtNome').val(),
            status: $('#cboStatus option:selected').val(),
            cargoID: $('#cboCargo option:selected').val()
        };

        $.ajax({
            type: "POST",
            url: "/usuario/salvar/",
            content: "application/json; charset=utf-8",
            dataType: "json",
            data: data,
            success: function (d) {
                if (d.status == "Sucesso") {
                    alert('Dados Salvos Com Sucesso !');
                    $('#txtNome').val("");
                    $('#cboStatus option:selected').val();
                    $('#cboCargo option:selected').val()
                } else {
                    alert('Ocorreu um erro ! Informe o Administrador do sistema');
                }
            },
            error: function (xhr, textStatus, errorThrown) {
                // TODO: Show error
            }
        });
    });
</script>