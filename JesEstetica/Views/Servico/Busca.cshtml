
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Novo Serviço
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form">
                            <div class="form-group col-lg-8">
                                <label>Serviço :</label>
                                <input class="form-control" id="txtNome">

                            </div>
                            <div class="form-group col-lg-4">
                                <br />
                                <button type="button" id="btnPesquisar" class="btn btn-default pull-right">Buscar</button>
                                <a href="/servico/cadastrar" class="btn btn-default  pull-right">Novo</a>
                            </div>

                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<br />
<div id="listaServico">
    @Html.Action("Listar", "Servico")
</div>



<script type="text/javascript">
    $("#btnPesquisar").click(function () {

        var data = {
            nome: $('#txtNome').val()
        };

        $.ajax({
            type: "POST",
            url: "/servico/Pesquisar/",
            content: "application/json; charset=utf-8",
            dataType: "html",
            data: data,
            success: function (d) {
                $("#listaServico").html(d);
            },
            error: function (xhr, textStatus, errorThrown) {
                // TODO: Show error
            }
        });
    });
</script>
