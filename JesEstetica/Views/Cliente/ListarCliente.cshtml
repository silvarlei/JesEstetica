@model  IEnumerable<cliente>


@if (Model != null)
{
    if (Model.Count() < 1)
    {
        <h5>Nenhum registro encontrado !</h5>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>nome</th>
                    <th>CPF</th>
                    <th>RG</th>
                    <th>Telefone</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.idClientes
                        </td>
                        <td>
                            @item.nome
                        </td>
                        <td>
                            @item.CPF
                        </td>
                        <td>
                            @item.RG
                        </td>
                        <td>
                            @item.telefone1
                        </td>
                        <td>
                            @*@Html.ActionLink("editar", "Editar", "cliente", new {  id = @item.idClientes },null)*@
                            <a href="javascript:carregarCliente(@item.idClientes)">Carregar</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
}


<script type="text/javascript">
    function carregarCliente(id)
    {
        $("#hfIDCliente").val(id);

        $.ajax({
            type: "POST",
            url: "/cliente/carregar/",
            content: "application/json; charset=utf-8",
            dataType: "html",
            data: {id:id},
            success: function (d) {
                $("#btnFechaModal").click();
                $("#divCliente").html(d);
                carregarConsulta(id);
                $("#listaClientes").html("");

                $("#txtNomeModal").val("");
                $("#txtCPFModal").val("");
                $("#txtRGModal").val("");

            },
            error: function (xhr, textStatus, errorThrown) {
                // TODO: Show error
            }
        });
    }
    function carregarConsulta(id) {
        $("#hfIDCliente").val(id);

        $.ajax({
            type: "POST",
            url: "/cliente/historicoCliente/",
            content: "application/json; charset=utf-8",
            dataType: "html",
            data: { id: id, finaliza: false},
            success: function (d) {
              
                $("#divConsulta").html(d);
            },
            error: function (xhr, textStatus, errorThrown) {
                // TODO: Show error
            }
        });
    }

