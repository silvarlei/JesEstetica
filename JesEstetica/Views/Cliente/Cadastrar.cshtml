
@{
    ViewBag.Title = "CadastroUsuario";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cadastro de Cliente</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Novo Cliente
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form">
                            <div class="form-group col-lg-8">
                                <label>Nome :</label>
                                <input class="form-control" id="txtnome">

                            </div>
                            <div class="form-group col-lg-4">
                                <label>CPF :</label>
                                <input class="form-control"  id="txtCPF">
                            </div>
                            <div class="form-group col-lg-4">
                                <label>RG:</label>
                                <input class="form-control" id="txtRG">
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Telefone 1:</label>
                                <input class="form-control"  id="txtTelefone1">
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Telefone 2:</label>
                                <input class="form-control"  id="txtTelefone2">
                            </div>
                            <div class="form-group col-lg-8">
                                <label>Email:</label>
                                <input class="form-control"  id="txtEmail" >
                            </div>
                            <div class="form-group col-lg-8">
                                <button type="button" id="btnSalvar" class="btn btn-default">Salvar</button>
                               
                            </div>

                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<script type="text/javascript">
    $("#btnSalvar").click(function () {
       
        var data = {
            nome: $('#txtnome').val(),
            cpf: $('#txtCPF').val(), 
            rg: $('#txtRG').val(),
            telefone1: $('#txtTelefone1').val(),
            telefone2: $('#txtTelefone2').val(),
            email: $('#txtEmail').val()
        };

        $.ajax({
            type: "POST",
            url: "/cliente/salvar/",
            content: "application/json; charset=utf-8",
            dataType: "json",
            data: data,
            success: function (d) {
                if (d.status == "Sucesso") {
                    alert('Dados Salvos Com Sucesso !');
                    $('#txtnome').val("");
                    $('#txtCPF').val("");
                    $('#txtRG').val("");
                    $('#txtTelefone1').val("");
                    $('#txtTelefone2').val("");
                    $('#txtEmail').val("");
                } else
                {
                    alert('Ocorreu um erro ! Informe o Administrador do sistema');
                }
            },
            error: function (xhr, textStatus, errorThrown) {
                // TODO: Show error
            }
        });
    });
</script>